<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebedee"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dancing_script_regular"
        android:gravity="center"
        android:text="Admin"
        android:textColor="@color/dark_grey"
        android:textSize="34sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/admin_image"
        app:civ_border_color="@color/dark_grey"
        app:civ_border_width="5dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dancing_script_regular"
        android:gravity="center"
        android:text="Saurav Roy"
        android:textColor="@color/dark_grey"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/dancing_script_regular"
        android:gravity="center"
        android:text="Computer Science and Engineering"
        android:textColor="@color/dark_grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/dancing_script_regular"
        android:gravity="center"
        android:text="Khulna University of Engineering &amp; Technology"
        android:textColor="@color/dark_grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/dancing_script_regular"
        android:gravity="center"
        android:text="Email : srsaurav0@gmail.com"
        android:textColor="@color/dark_grey"
        android:textSize="20sp" />
</LinearLayout>