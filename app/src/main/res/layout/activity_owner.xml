<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/owner_screen_bg"
    tools:context=".OwnerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/myToolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rose_gold"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:logo="@drawable/ic_baseline_menu"
                app:title="My Home"
                app:titleMarginStart="40dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_input_pale_pink"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/property"
                android:textColor="@color/rose_gold"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/eb_garamond_semibold"
                    android:gravity="center"
                    android:hint="District :"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/districtId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_border"
                    android:entries="@array/districts"
                    android:gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextThanaId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Enter your thana"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextAddressId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Enter your address"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextFlatId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Enter flat number and floor number"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextAreaId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Enter the area (in Square Feet)"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextRoomsId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Enter number of rooms and descriptions"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextRentAmountId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Enter the rent amount (in BDT)"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextAdvanceAmountId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Amout to be paid in advance (BDT)"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

            <EditText
                android:id="@+id/editTextPhoneNumberId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color" />

<!--            <TextView
                android:id="@+id/imageUploadId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_border"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:text="@string/imgView1"
                android:textColor="@color/default_text_color"
                android:textSize="20sp" />
-->

            <Button
                android:id="@+id/addButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/eb_garamond_bold"
                android:text="Add"
                android:textColor="@color/white"
                app:backgroundTint="@color/ultra_violet" />

            <TextView
                android:id="@+id/propertyViewId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/edit_text_border"
                android:fontFamily="@font/eb_garamond_semibold"
                android:gravity="center"
                android:text="@string/owner_view"
                android:textColor="@color/rose_gold"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>